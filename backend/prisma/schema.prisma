generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int      @id @default(autoincrement())
  firebaseUid String   @unique @db.VarChar(128)
  email       String   @unique @db.VarChar(255)
  name        String   @db.VarChar(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Incomes           Incomes[]
  Outflows          Outflows[]
  UserCategory      UserCategory[]
  Investments       Investments[]
  Cryptos           Cryptos[]
  Rewards           Rewards[]
  // Categorias criadas por este usuário
  CreatedCategories Categories[]   @relation("CategoryCreator")

  @@map("users")
}

model Incomes {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(64)
  amount    Decimal  @db.Decimal(10, 2)
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("incomes")
}

model Outflows {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(64)
  amount     Decimal  @db.Decimal(10, 2)
  date       DateTime @default(now())
  categoryId Int
  status     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId   Int
  user     Users      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Categories @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@map("outflows")
}

model Categories {
  id        Int      @id @default(autoincrement())
  category  String   @unique @db.VarChar(64)
  isDefault Boolean  @default(false) // true para categorias padrão (mercado, farmácia, etc.)
  createdBy Int? // null para categorias padrão, userId para categorias criadas por usuários
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  outflows     Outflows[]
  UserCategory UserCategory[]
  creator      Users?         @relation("CategoryCreator", fields: [createdBy], references: [id], onDelete: SetNull)

  @@map("categories")
}

model UserCategory {
  userId     Int
  categoryId Int
  addedAt    DateTime @default(now()) // Quando o usuário ganhou acesso a esta categoria
  isActive   Boolean  @default(true) // false quando o usuário "desativa" a categoria

  user     Users      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([userId, categoryId])
  @@map("user_categories")
}

model Investments {
  id             Int      @id @default(autoincrement())
  name           String   @db.VarChar(64)
  investmentType String   @db.VarChar(32)
  amount         Decimal  @db.Decimal(15, 2)
  purchaseDate   DateTime @default(now())
  dueDate        DateTime
  yieldValue     Decimal  @db.Decimal(10, 4)
  yieldType      String   @db.VarChar(32)
  bank           String   @db.VarChar(64)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userId Int
  user   Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("investments")
}

model Cryptos {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(64)
  amount       Decimal  @db.Decimal(10, 2)
  price        Decimal  @db.Decimal(15, 8)
  quantity     Decimal  @db.Decimal(18, 8)
  purchaseDate DateTime @default(now())
  bank         String   @db.VarChar(64)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("cryptos")
}

model Rewards {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(64)
  quantity  Decimal  @db.Decimal(10, 2)
  dueDate   DateTime
  issuer    String   @db.VarChar(64)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("rewards")
}
